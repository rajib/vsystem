<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Variant System ADMIN PANEL") %></title>
    <%= stylesheet_link_tag 'admin' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <h1><font face="verdana" color="">VARIANT SYSTEM</font></h1>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>

       <% if logged_in? %>
         <div id="logged_in_bar">
             Welcome <%=h current_user.username %> ( <font face="verdana" color="red">Administrator</font> ) 
             <%= link_to "Log out", logout_path %> | <%= link_to "Admin Home Page", base_url %> | <%= link_to "www.variantsystem.com", root_path %>
         </div>
       <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
